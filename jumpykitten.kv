#:kivy 1.10.0

<JumpyKittenGame>:
    background: background
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
    Background:
        id: background
        pos: root.pos
    Label:
        font_size: 75
        right: 1.65*root.center_x
        top: 0.8*root.top
        markup: True
        bold: True
        text: "[u][color=e29ea3]Distance: " + '{:.0f}'.format(root.score) + "[/color][/u]"

<endGamePopup>:
    title: 'End Game'
    # separator_height: 0
    # background_color: 0, 0, 0, .0
    # size_hint: (.25, .6)
    # pos_hint: {'x':.375, 'y':.2}
    size_hint: None, None
    size: '300dp', '300dp'
    halign: 'center'
    # background: 'data/popup.png'
    separator_color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
    title_size: '20sp'

    BoxLayout:
        # cols: 1
        Label:
            font_size: '20sp'
            color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
            bold: True
            text: "Score" #+ '{:.0f}'.format(root.score)
            text_size: self.width - dp(20), None
            halign: 'center'
            valign: 'center'

        BoxLayout:
            size_hint_y: None
            height: '68dp'
            spacing: '10dp'
            size: '280dp', '50dp'
            Button:
                text: 'Home'
                size: '120dp', '50dp'
                on_release:
                    root.dismiss()
                    app.sm.current = 'MainPage'

            Button:
                text: 'Replay'
                size: '120dp', '50dp'
                on_release:
                    root.dismiss()
                    app.sm.current = 'MainPage'
                    app.sm.current = 'GamePage'

