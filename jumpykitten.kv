#:kivy 1.10.0

<JumpyKittenGame>:
    background: background
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
    Background:
        id: background
        pos: root.pos
    Label:
        font_size: 70
        center_x: root.center_x
        top: root.top - 30
        markup: True
        text: "[color=ffffff]" + '{:.0f}'.format(root.score) + "[/color]"

<endGamePopup>:
    title: 'You Lost'
    BoxLayout:
        Label:
            text: "Your scores"
        Button:
            text: 'Start Again'
            on_release:
                app.sm.current = 'MainPage'
                root.dismiss()
