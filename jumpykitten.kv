#:kivy 1.10.0

<JumpyKittenGame>:
    background: background
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
    Background:
        id: background
        pos: root.pos
    Label:
        font_size: 70
        center_x: root.center_x
        top: root.top - 30
        markup: True
        text: "[color=ffffff]" + '{:.0f}'.format(root.score) + "[/color]"

<endGamePopup>:
    title: 'You Lost'
    background_color: 0, 0, 0, .3
    size_hint: (.2, .3)
    pos_hint: {'x':.4, 'y':.35}
    Button:
        text: 'Start Again'
        size_hint: (1., 1.)
        on_release:
            app.sm.current = 'MainPage'
            root.dismiss()
