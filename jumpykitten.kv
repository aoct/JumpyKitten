#:kivy 1.10.0

<JumpyKittenGame>:
    background: background
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
    Background:
        id: background
        pos: root.pos
    Label:
        font_size: 75
        right: 1.65*root.center_x
        top: 0.8*root.top
        markup: True
        bold: True
        text: "[u][color=e29ea3]Distance: " + '{:.0f}'.format(root.score) + "[/color][/u]"

<endGamePopup>:
    title: ""
    separator_height: 0
    background_color: 0, 0, 0, .0
    size_hint: (.25, .6)
    pos_hint: {'x':.375, 'y':.2}
    GridLayout:
        cols: 1
        Button:
            size_hint: (.7, .7)
            pos: (.15, .4)
            on_release:
                root.dismiss()
                app.sm.current = 'MainPage'
                app.sm.current = 'GamePage'
            background_color: 0, 0, 0, .0
            Image:
                source: "images/icons/retry.png"
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True
        Label:
            text: ''
            size_hint: (.05, .05)
        Button:
            size_hint: (.3, .3)
            # pos: (.1, .1)
            on_release:
                root.dismiss()
                app.sm.current = 'MainPage'
            background_color: 0, 0, 0, .0
            Image:
                source: "images/icons/home.png"
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True


<GooglePlayPopup>:
	size_hint: None, None
	title: 'Connect to Google Play'
	size: '300dp', '300dp'
	# background: 'data/popup.png'
	separator_color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
	title_size: '20sp'

	BoxLayout:

		orientation: 'vertical'
		spacing: '10dp'
		padding: '10dp'

		Label:
			font_size: '20sp'
			color: 0x77 / 255., 0x6e / 255., 0x65 / 255., 1.
			bold: True
			text: 'Do you want to connect to Google Play for the Leaderboard?'
			text_size: self.width - dp(20), None
			halign: 'center'

		BoxLayout:
			size_hint_y: None
			height: '68dp'
			spacing: '10dp'
			Button:
				text: 'No'
				on_press: root.dismiss()

			Button:
				text: 'Yes'
				on_press: app.activate_google_play(); root.dismiss()
